root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.bat]
end_of_line = crlf

[*.csv]
indent_style = space
trim_trailing_whitespace = false
insert_final_newline = false

[*.cson]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.py]
indent_style = space
indent_size = 4

[*.tsv]
indent_style = tab
trim_trailing_whitespace = false
insert_final_newline = false

[*.yml]
indent_style = space

[makefile]
indent_style = tab
